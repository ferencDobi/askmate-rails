<div class="page-body">
  <div class="slide-container">
    <%= render 'questions/new' %>
    <div class="route-container">
      <p>
        > <%= link_to 'Users', users_path %>
        > <%= @user.username %>
      </p>
    </div>
    <div class="tag_container">
      <div class="tag">
        <h3><%= @user.username %>'s question(s)</h3>
      </div>
      <% if @user.questions.empty? %>
        <p><%= @user.username %> has no questions yet.</p>
      <% end %>
    </div>
  </div>
  <% unless @user.questions.empty? %>
    <div class="table_container">
      <table>
        <tr>
          <th>Submission time</th>
          <th>Question title</th>
          <th>Votes</th>
          <th><i class="fa fa-eye" aria-hidden="true"></i></th>
        </tr>

        <% @user.questions.each do |question| %>

          <tr class="table_body">
            <td><%= time_ago_in_words question.created_at %> ago</td>
            <td><%= link_to question.title, question %></td>
            <td><%= question.upvotes %></td>
            <td><%= question.views %></td>
          </tr>

        <% end %>

      </table>
    </div>
  <% end %>



  <div class="table_container2">
    <div class="tag_container">
      <div class="tag">
        <h3><%= @user.username %>'s answer(s)</h3>
      </div>
      <% if @user.answers.empty? %>
        <p><%= @user.username %> has no answers yet.</p>
      <% end %>
    </div>
    <% unless @user.answers.empty? %>
      <table>
        <tr>
          <th>Submission time</th>
          <th>Answer</th>
          <th>Votes</th>
        </tr>

        <% @user.answers.each do |answer| %>
          <tr class="table_body">
            <td><%= time_ago_in_words answer.created_at %> ago</td>
            <td><%= link_to answer.message, question_path(answer.question) %></td>
            <td><%= answer.upvotes %></td>
          </tr>
        <% end %>
      </table>
    <% end %>
    <br>
    <a href="#top" class="to-top">Back to top</a>
  </div>
  <%= render 'layouts/login-box' %>
</div>