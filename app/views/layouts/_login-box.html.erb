<div class="login-box">
  <div class="form-box">
    <% if current_user %>
      <p>Welcome, <%= current_user.username %>!</p>
      <%= form_tag({controller: :session, action: :destroy}, method: :delete) do %>
        <button type="submit" class="input">Log Out</button>
      <% end %>
    <% else %>
      <%= form_tag controller: :session, action: :create do %>
        <label for="username">Username:</label>
        <input type="text" id="username" name="login[username]" required>
        <label for="password">Password:</label>
        <input type="password" id="password" name="login[password]" required>
        <button type="submit" class="input">Sign In</button>
      <% end %>
      <%= form_tag controller: :users, action: :new do %>
        <input type="hidden" value="" name="new_user" id="new-user">
        <button type="submit" class="input">Sign Up</button>
      <% end %>
      <!-- TODO: add error handling -->
    <% end %>
  </div>
</div>