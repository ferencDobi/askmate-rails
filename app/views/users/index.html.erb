<div class="page-body">
  <div class="slide-container">
    <%= render 'questions/new' %>
    <div class="tag_container">
      <div class="tag">
        <h3>Ask mates</h3>
      </div>
    </div>
  </div>
  <div class="table_container">
    <table>
      <tr>
        <th>Username</th>
        <th>Full name</th>
        <th>Birth date</th>
        <th><i class="fa fa-question"></i></th>
        <th><i class="fa fa-comment" aria-hidden="true"></i></th>
      </tr>
      <% @users.each do |user| %>
        <tr class="table_body">
          <td><%= link_to user.username, user_path(user) %></td>
          <td><%= "#{user.first_name} #{user.last_name}" %></td>
          <td><%= user.birthday %></td>
          <td><%= user.questions.size %></td>
          <td><%= user.answers.size %></td>
        </tr>
      <% end %>
    </table>
    <br>
    <a href="#top" class="to-top">Back to top</a>
  </div>
  <%= render 'layouts/login-box' %>
</div>